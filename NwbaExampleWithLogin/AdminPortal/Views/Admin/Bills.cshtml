@model IEnumerable<AdminPortal.Models.Bill>

@{
    ViewData["Title"] = "Bills";
}

<h1>User @ViewBag.UserId.ToString() Bills</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BillID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayeeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduleDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Period)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifyDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BillID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayeeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScheduleDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Period)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifyDate)
                </td>
                <td>
                    @if (item.Status == BillStatus.Active)
                        @Html.ActionLink("Block", "BlockBill", new { id = item.BillID, User = ViewBag.UserId }, new { @class="btn btn-warning" })
                    @if (item.Status == BillStatus.Blocked)
                        @Html.ActionLink("UnBlock", "UnBlockbill", new { id = item.BillID, User = ViewBag.UserId }, new { @class="btn btn-primary" })
                </td>
            </tr>
        }
      
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to User List</a>
</div>